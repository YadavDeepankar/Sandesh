<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen"
        android:alpha="0.2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SANDESH"
        android:textColor="#181b1a"
        android:textStyle="bold"
        android:textSize="40dp"
        android:paddingTop="35dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motto"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#181b1a"
        android:paddingTop="15dp"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:text="We're Together ! \n We will not fall apart !!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="50dp"
        android:layout_alignTop="@+id/motto"
        android:src="@drawable/ic_sandesh"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logo_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:maxWidth="20dp"
        android:maxHeight="20dp"
        android:progressTint="@color/common_google_signin_btn_text_dark_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progress"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="-35dp"
        android:text="Loading..."
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#181b1a" />

</RelativeLayout>